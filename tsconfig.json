{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2022",
    "lib": ["es2022", "webworker"],
    "typeRoots": ["./node_modules/@types"],
    "alwaysStrict": true,
    "skipLibCheck": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ],
  "types": [
    "./src/types/*"
  ],
  "exclude": ["node_modules/", "dist/"]
}